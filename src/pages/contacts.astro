---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact - Marc">
    <section class="py-5">
        <div class="container text-light">
            <h1 class="display-4 fw-bold mb-3 section-title text-center">Get in Touch</h1>
            <p class="text-center text-muted lead mb-5">Have a project in mind or want to discuss engineering? Send me a message!</p>
            
            <div class="row justify-content-center g-5">
                
                <!-- Contact Form Column -->
                <div class="col-lg-7">
                    <div class="card bg-dark-subtle border-secondary p-4 p-md-5 shadow-sm">
                        <h3 class="h4 mb-4" style="color: var(--color-emerald);">Send a Message</h3>
                        
                        <!-- Web3Forms Integration -->
                        <form action="https://api.web3forms.com/submit" method="POST">
                            <!-- Access Key -->
                            <input type="hidden" name="access_key" value="cb44b232-2433-4145-8f06-9e7f37d1b760">
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="name" class="form-label text-light opacity-75 small">Name</label>
                                    <input type="text" name="name" id="name" class="form-control bg-dark text-light border-secondary" required placeholder="John Doe">
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label text-light opacity-75 small">Email</label>
                                    <input type="email" name="email" id="email" class="form-control bg-dark text-light border-secondary" required placeholder="john@example.com">
                                </div>
                                <div class="col-12">
                                    <label for="subject" class="form-label text-light opacity-75 small">Subject</label>
                                    <input type="text" name="subject" id="subject" class="form-control bg-dark text-light border-secondary" required placeholder="Project Inquiry / Collaboration">
                                </div>
                                <div class="col-12">
                                    <label for="message" class="form-label text-light opacity-75 small">Message</label>
                                    <textarea name="message" id="message" rows="5" class="form-control bg-dark text-light border-secondary" required placeholder="Hello Marc, I laid out a PCB and need..."></textarea>
                                </div>
                                
                                <!-- Honeypot Spam Protection -->
                                <input type="checkbox" name="botcheck" class="hidden" style="display: none;">
                                
                                <div class="col-12 mt-4">
                                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Social Links Column -->
                <div class="col-lg-4">
                    <div class="d-flex flex-column gap-3 h-100 justify-content-center">
                        <h3 class="h4 mb-3 d-none d-lg-block" style="color: var(--color-emerald);">Connect</h3>
                        
                        <!-- Email Card -->
                        <a href="mailto:marc.anjaniaina@gmail.com" class="text-decoration-none">
                            <div class="card bg-dark-subtle border-secondary p-3 shadow-sm social-card d-flex flex-row align-items-center gap-3">
                                <div class="icon-box bg-dark border border-secondary rounded d-flex justify-content-center align-items-center" style="width: 48px; height: 48px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="var(--color-emerald)" class="bi bi-envelope-fill" viewBox="0 0 16 16">
                                        <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414zM0 4.697v7.104l5.803-3.558zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586zm3.436-.586L16 11.801V4.697z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h6 class="text-white mb-0 fw-bold">Email</h6>
                                    <small class="text-muted">marc.anjaniaina@gmail.com</small>
                                </div>
                            </div>
                        </a>

                        <!-- LinkedIn Card -->
                        <a href="https://www.linkedin.com/in/marc-anjaniaina-ravelontsalama/" target="_blank" rel="noopener noreferrer" class="text-decoration-none">
                            <div class="card bg-dark-subtle border-secondary p-3 shadow-sm social-card d-flex flex-row align-items-center gap-3">
                                <div class="icon-box bg-dark border border-secondary rounded d-flex justify-content-center align-items-center" style="width: 48px; height: 48px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="var(--color-emerald)" class="bi bi-linkedin" viewBox="0 0 16 16">
                                        <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h6 class="text-white mb-0 fw-bold">LinkedIn</h6>
                                    <small class="text-muted">Connect professionally</small>
                                </div>
                            </div>
                        </a>

                        <!-- GitHub Card -->
                        <a href="https://github.com/marcravel" target="_blank" rel="noopener noreferrer" class="text-decoration-none">
                            <div class="card bg-dark-subtle border-secondary p-3 shadow-sm social-card d-flex flex-row align-items-center gap-3">
                                <div class="icon-box bg-dark border border-secondary rounded d-flex justify-content-center align-items-center" style="width: 48px; height: 48px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="var(--color-emerald)" class="bi bi-github" viewBox="0 0 16 16">
                                        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
                                    </svg>
                                </div>
                                <div>
                                    <h6 class="text-white mb-0 fw-bold">GitHub</h6>
                                    <small class="text-muted">marcravel</small>
                                </div>
                            </div>
                        </a>

                        <!-- YouTube Card -->
                        <a href="https://www.youtube.com/@Code-Copper" target="_blank" rel="noopener noreferrer" class="text-decoration-none">
                            <div class="card bg-dark-subtle border-secondary p-3 shadow-sm social-card d-flex flex-row align-items-center gap-3">
                                <div class="icon-box bg-dark border border-secondary rounded d-flex justify-content-center align-items-center" style="width: 48px; height: 48px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="var(--color-emerald)" class="bi bi-youtube" viewBox="0 0 16 16">
                                        <path d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172 1.886.22 3.404.049 1.518.049 3.024-.029 3.42a2.01 2.01 0 0 1-1.415 1.42c-1.123.3-5.288.332-6.11.335h-.089c-.822-.003-4.987-.033-6.11-.335a2.01 2.01 0 0 1-1.415-1.42c-.101-.38-.172-1.886-.22-3.404-.049-1.518-.049-3.024.029-3.42a2.01 2.01 0 0 1 1.415-1.42c1.123-.3 5.288-.332 6.11-.335M5.525 6.525v2.95l2.95-1.475-2.95-1.475z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h6 class="text-white mb-0 fw-bold">YouTube</h6>
                                    <small class="text-muted">Code & Copper</small>
                                </div>
                            </div>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
/* Base adjustment for the bg-dark-subtle utility */
.bg-dark-subtle {
    background-color: var(--color-bg-dark-secondary) !important;
}

/* Form Styling Additions focus states */
.form-control:focus {
    background-color: var(--color-bg-dark-secondary) !important;
    border-color: var(--color-emerald) !important;
    box-shadow: 0 0 0 0.25rem rgba(16, 185, 129, 0.25) !important;
    color: white !important;
}

/* Unified Hover Effects for Social Cards matching ProjectCards */
.social-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    border-radius: var(--radius-md);
}

.social-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-hover) !important;
    border-color: rgba(16, 185, 129, 0.3) !important;
    border-width: 2px !important;
}
</style>
