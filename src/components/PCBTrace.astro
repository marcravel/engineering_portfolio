<div class="pcb-trace-container d-flex justify-content-center my-4">
    <svg width="100%" height="40" viewBox="0 0 1000 40" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
        <!-- Background subtle line -->
        <polyline 
            points="0,20 300,20 320,5 680,5 700,20 1000,20" 
            fill="none" 
            stroke="var(--color-navy)" 
            stroke-width="2" 
            stroke-opacity="0.2" 
        />
        
        <!-- Animated drawing trace -->
        <polyline 
            class="pcb-animated-line"
            points="0,20 300,20 320,5 680,5 700,20 1000,20" 
            fill="none" 
            stroke="var(--color-navy)" 
            stroke-width="2" 
        />
        
        <!-- Nodes/Pads -->
        <circle cx="300" cy="20" r="4" fill="var(--color-navy)" />
        <circle cx="320" cy="5" r="4" fill="var(--color-navy)" />
        <circle cx="680" cy="5" r="4" fill="var(--color-navy)" />
        <circle cx="700" cy="20" r="4" fill="var(--color-navy)" />
    </svg>
</div>

<style>
.pcb-trace-container svg {
    display: block;
    max-width: 800px;
}

.pcb-animated-line {
    stroke-dasharray: 1050;
    stroke-dashoffset: 1050;
    animation: trace-draw 4s infinite ease-in-out;
}

@keyframes trace-draw {
    0% {
        stroke-dashoffset: 1050;
    }
    40% {
        stroke-dashoffset: 0;
    }
    60% {
        stroke-dashoffset: 0;
    }
    100% {
        stroke-dashoffset: -1050;
    }
}
</style>
