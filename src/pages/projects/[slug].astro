---
import BaseLayout from '../../layouts/BaseLayout.astro';
import projectsData from '../../data/projects.json';

// Generate paths for all projects based on their slug
export async function getStaticPaths() {
  return projectsData.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;

// Helper to determine the hero image URL with BASE_URL routing
let heroImage = project.image;
if (heroImage && !heroImage.startsWith('http')) {
    const baseUrl = import.meta.env.BASE_URL.endsWith('/') 
        ? import.meta.env.BASE_URL 
        : import.meta.env.BASE_URL + '/';
    heroImage = `${baseUrl}${heroImage}`;
}
---

<BaseLayout title={`${project.title} - Marc Projects`}>
    <section class="py-5">
        <div class="container text-light">
            
            <!-- Navigation Back -->
            <div class="mb-4">
                <a href={`${import.meta.env.BASE_URL}projects`} class="text-decoration-none text-emerald d-inline-flex align-items-center gap-2 hover-opacity">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                    </svg>
                    Back to Projects
                </a>
            </div>

            <!-- Project Header -->
            <div class="mb-5">
                <div class="mb-3">
                    <span class="badge badge-emerald px-3 py-2 shadow-sm">{project.category}</span>
                </div>
                <h1 class="display-5 fw-bold mb-3">{project.title}</h1>
                
                {project.achievements && (
                    <div class="d-inline-block p-2 px-3 rounded bg-dark bg-opacity-50 border border-secondary border-opacity-25 mb-4">
                        <span class="fw-semibold" style="color: var(--color-gold);">
                            {project.achievements}
                        </span>
                    </div>
                )}
            </div>

            <div class="row g-5">
                <!-- Left Column: Content & Tech Stack -->
                <div class="col-lg-4 order-lg-2">
                    <div class="card bg-dark-subtle border-secondary p-4 shadow-sm h-100">
                        <h4 class="h5 mb-4" style="color: var(--color-emerald);">Technologies / Architecture</h4>
                        <div class="d-flex flex-wrap gap-2 mb-4">
                            {project.techStack.map((tech) => (
                                <span class="badge bg-dark border border-secondary text-light px-3 py-2">{tech}</span>
                            ))}
                        </div>
                        <hr class="border-secondary opacity-25">
                        <p class="text-muted small mb-0">Project ID: #{project.id}</p>
                    </div>
                </div>

                <!-- Right Column: Media & Description -->
                <div class="col-lg-8 order-lg-1">
                    
                    <!-- Media Hero (YouTube or Image) -->
                    <div class="mb-5 rounded overflow-hidden shadow-lg border border-secondary border-opacity-25 bg-dark">
                        {project.youtubeId ? (
                            <div class="ratio ratio-16x9">
                                <iframe 
                                    src={`https://www.youtube.com/embed/${project.youtubeId}`} 
                                    title="YouTube video player" 
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                    allowfullscreen
                                ></iframe>
                            </div>
                        ) : (
                            heroImage && (
                                <img src={heroImage} alt={project.title} class="img-fluid w-100" style="object-fit: cover; max-height: 500px;" />
                            )
                        )}
                    </div>

                    <!-- Long Description -->
                    <div class="mb-5">
                        <h3 class="h4 mb-4" style="color: var(--color-emerald);">Overview</h3>
                        <p class="lead text-light opacity-75" style="line-height: 1.8;">
                            {project.longDescription || project.description}
                        </p>
                    </div>

                    <!-- Supplemental Gallery -->
                    {project.gallery && project.gallery.length > 0 && (
                        <div>
                            <h3 class="h4 mb-4" style="color: var(--color-emerald);">Gallery</h3>
                            <div class="row g-3">
                                {project.gallery.map((galleryImg) => {
                                    // Handle correct routing for gallery images
                                    let imgPath = galleryImg;
                                    if (!imgPath.startsWith('http')) {
                                        const bUrl = import.meta.env.BASE_URL.endsWith('/') 
                                            ? import.meta.env.BASE_URL 
                                            : import.meta.env.BASE_URL + '/';
                                        imgPath = `${bUrl}${imgPath}`;
                                    }
                                    return (
                                        <div class="col-md-6 col-lg-4">
                                            <div class="card bg-dark border-secondary overflow-hidden h-100" style="min-height: 200px;">
                                                <img src={imgPath} class="card-img h-100 w-100" style="object-fit: cover;" alt="Project Gallery Image" loading="lazy" />
                                            </div>
                                        </div>
                                    )
                                })}
                            </div>
                        </div>
                    )}

                </div>
            </div>

        </div>
    </section>
</BaseLayout>

<style>
/* Base adjustment for the bg-dark-subtle utility */
.bg-dark-subtle {
    background-color: var(--color-bg-dark-secondary) !important;
}

.text-emerald {
    color: var(--color-emerald) !important;
}

.hover-opacity {
    transition: opacity 0.2s ease;
}
.hover-opacity:hover {
    opacity: 0.8;
}
</style>
